<%= form_for @transportadora, :html => { :class => "form-horizontal transportadora" } do |f| %>

    <% if @transportadora.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@transportadora.errors.count, "error") %> prohibited this transportadora from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @transportadora.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :nome, :class => 'control-label' %>
