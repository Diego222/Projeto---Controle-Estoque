<%- model_class = Transportadora -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @transportadora.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:endereco) %>:</strong></dt>
  <dd><%= @transportadora.endereco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cidade) %>:</strong></dt>
  <dd><%= @transportadora.cidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado) %>:</strong></dt>
  <dd><%= @transportadora.estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefone) %>:</strong></dt>
  <dd><%= @transportadora.telefone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cnpj) %>:</strong></dt>
  <dd><%= @transportadora.cnpj %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inscricao_estadual) %>:</strong></dt>
  <dd><%= @transportadora.inscricao_estadual %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.voltar")),
              transportadoras_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_transportadora_path(@transportadora), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.excluir")),
              transportadora_path(@transportadora),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'VocÃª tem certeza?')) },
              :class => 'btn btn-danger' %>
