<%- model_class = Pedido -%>
<div class="page-header">
  <h1>Pedido</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fornecedor_id) %>:</strong></dt>
  <dd><%= @pedido.fornecedor.empresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @pedido.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @pedido.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pedido) %>:</strong></dt>
  <dd><%= @pedido.pedido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacoes) %>:</strong></dt>
  <dd><%= @pedido.observacoes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.voltar")),
              pedidos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_pedido_path(@pedido), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.excluir")),
              pedido_path(@pedido),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'VocÃª tem certeza?')) },
              :class => 'btn btn-danger' %>
