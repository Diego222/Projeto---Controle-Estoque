<%- model_class = Pedido -%>
<div class="page-header">
  <h1>Lista de Pedidos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fornecedor_id) %></th>
      <th><%= model_class.human_attribute_name(:data) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:pedido) %></th>
      <th><%= model_class.human_attribute_name(:observacoes) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= link_to pedido.id, pedido_path(pedido) %></td>
        <td><%= pedido.fornecedor.empresa %></td>
        <td><%= pedido.data %></td>
        <td><%= pedido.email %></td>
        <td><%= pedido.pedido %></td>
        <td><%= pedido.observacoes %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_pedido_path(pedido), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.excluir")),
                      pedido_path(pedido),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'VocÃª tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.novo")),
            new_pedido_path,
            :class => 'btn btn-primary' %><br>
            <%= paginate  @pedidos %>
