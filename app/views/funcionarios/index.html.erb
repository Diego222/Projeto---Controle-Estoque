<%- model_class = Funcionario -%>
<div class="page-header">
  <h1>Lista de Funcionários</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:endereco) %></th>
      <th><%= model_class.human_attribute_name(:bairro) %></th>
      <th><%= model_class.human_attribute_name(:cidade) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:cep) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%= model_class.human_attribute_name(:admissao) %></th>
      <th><%= model_class.human_attribute_name(:salario) %></th>
      <th><%= model_class.human_attribute_name(:cpf) %></th>
      <th><%= model_class.human_attribute_name(:identidade) %></th>
      <th><%= model_class.human_attribute_name(:nascimento) %></th>
      <th><%= model_class.human_attribute_name(:cargo) %></th>
      <th><%=t '.actions', :default => t("helpers.ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= link_to funcionario.id, funcionario_path(funcionario) %></td>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.endereco %></td>
        <td><%= funcionario.bairro %></td>
        <td><%= funcionario.cidade %></td>
        <td><%= funcionario.estado %></td>
        <td><%= funcionario.cep %></td>
        <td><%= funcionario.telefone %></td>
        <td><%= funcionario.admissao %></td>
        <td><%= funcionario.salario %></td>
        <td><%= funcionario.cpf %></td>
        <td><%= funcionario.identidade %></td>
        <td><%= funcionario.nascimento %></td>
        <td><%= funcionario.cargo %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_funcionario_path(funcionario), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.excluir")),
                      funcionario_path(funcionario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'Você tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.novo")),
            new_funcionario_path,
            :class => 'btn btn-primary' %><br>
              <%= paginate  @funcionarios %>
