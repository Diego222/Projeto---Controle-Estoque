<%- model_class = Produto -%>
<div class="page-header">
  <h1>Produto</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:descricao_produto) %>:</strong></dt>
  <dd><%= @produto.descricao_produto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @produto.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantidade) %>:</strong></dt>
  <dd><%= @produto.quantidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fornecedor_id) %>:</strong></dt>
  <dd><%= @produto.fornecedor.empresa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fabricante) %>:</strong></dt>
  <dd><%= @produto.fabricante %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preco_custo) %>:</strong></dt>
  <dd><%= @produto.preco_custo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:preco_venda) %>:</strong></dt>
  <dd><%= @produto.preco_venda %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_ultimo_reajuste) %>:</strong></dt>
  <dd><%= @produto.data_ultimo_reajuste %></dd>
  <p> 
  <strong>Imagem:</strong>
  <%= image_tag @produto.avatar.url(:thumb)%>
  </p>
</dl>

<%= link_to t('.back', :default => t("helpers.links.voltar")),
              produtos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_produto_path(@produto), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.excluir")),
              produto_path(@produto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'VocÃª tem certeza?')) },
              :class => 'btn btn-danger' %>
