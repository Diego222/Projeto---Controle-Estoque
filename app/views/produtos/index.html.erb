<%- model_class = Produto -%>
<div class="page-header">
  <h1>Lista de Produtos</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descricao_produto) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:fornecedor_id) %></th>
      <th><%= model_class.human_attribute_name(:fabricante) %></th>
      <th><%= model_class.human_attribute_name(:preco_custo) %></th>
      <th><%= model_class.human_attribute_name(:preco_venda) %></th>
      <th><%= model_class.human_attribute_name(:data_ultimo_reajuste) %></th>
      <th><%=t '.actions', :default => t("helpers.ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= link_to produto.id, produto_path(produto) %></td>
        <td><%= produto.descricao_produto %></td>
        <td><%= produto.tipo %></td>
        <td><%= produto.fornecedor_id %></td>
        <td><%= produto.fabricante %></td>
        <td><%= produto.preco_custo %></td>
        <td><%= produto.preco_venda %></td>
        <td><%= produto.data_ultimo_reajuste %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_produto_path(produto), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.excluir")),
                      produto_path(produto),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'Você tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.novo")),
            new_produto_path,
            :class => 'btn btn-primary' %>
