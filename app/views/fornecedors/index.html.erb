<%- model_class = Fornecedor -%>
<div class="page-header">
  <h1>Lista de Fornecedores</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:empresa) %></th>
      <th><%= model_class.human_attribute_name(:contato) %></th>
      <th><%= model_class.human_attribute_name(:endereco) %></th>
      <th><%= model_class.human_attribute_name(:bairro) %></th>
      <th><%= model_class.human_attribute_name(:cidade) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:cep) %></th>
      <th><%= model_class.human_attribute_name(:telefone) %></th>
      <th><%= model_class.human_attribute_name(:fax) %></th>
      <th><%= model_class.human_attribute_name(:cnpj) %></th>
      <th><%= model_class.human_attribute_name(:inscricao_estadual) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:data_cadastro) %></th>
      <th><%=t '.actions', :default => t("helpers.ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fornecedors.each do |fornecedor| %>
      <tr>
        <td><%= link_to fornecedor.id, fornecedor_path(fornecedor) %></td>
        <td><%= fornecedor.empresa %></td>
        <td><%= fornecedor.contato %></td>
        <td><%= fornecedor.endereco %></td>
        <td><%= fornecedor.bairro %></td>
        <td><%= fornecedor.cidade %></td>
        <td><%= fornecedor.estado %></td>
        <td><%= fornecedor.cep %></td>
        <td><%= fornecedor.telefone %></td>
        <td><%= fornecedor.fax %></td>
        <td><%= fornecedor.cnpj %></td>
        <td><%= fornecedor.inscricao_estadual %></td>
        <td><%= fornecedor.email %></td>
        <td><%= fornecedor.data_cadastro %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_fornecedor_path(fornecedor), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.excluir")),
                      fornecedor_path(fornecedor),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'Você tem certeza?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.novo")),
            new_fornecedor_path,
            :class => 'btn btn-primary' %><br>
            <%= paginate  @fornecedors %>
